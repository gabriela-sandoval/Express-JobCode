@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="masthead fondo-principal">
    <div class="container container-auth">
        <button class="btn btn-link btn-circle btn-atras" type="button" onClick="history.go(-1)"></button>
    </div>
    <div class="com-md-6 offset-md-3 com-md-6-width">
        <div class="card login-logout-tab">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs">
                    <li class="nav-item">
                        <a class="nav-link text-light" href='/Identity/Account/Login'>Iniciar sesión</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" href='/Identity/Account/Register'>Registrarme</a>
                    </li>
                </ul>
            </div>
            <div class="card-content">
                <div class="row">
                    <div class="col-md-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{ 
    @RenderSection("Scripts", required: false)
}