@inject ExpressJob.Services.Repository.TrabajadorRepository _TrabajadorRepository
@model ExpressJob.Domain.Trabajador

@{
    Layout = "_LayoutMenu";
    ViewData["Title"] = "Registro";
}

<div class="container text-dark" xmlns="http://www.w3.org/1999/html">
    <div class="card shadow-lg o-hidden border-0 my-5">
        <div class="card-body p-0">
            <div class="row">
                <div class="col-lg-5 d-none d-lg-flex">
                    <div class="flex-grow-1 bg-register-image fondo-registro-servicios"></div>
                </div>
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h4 class="text-dark mb-4" style="font-family: Lato, sans-serif;font-weight: bold;">¡Registrate para ofrecer tus servicios!</h4>
                        </div>
                        <form method="post"  class="user">
                            
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input asp-for="TelefonoMovil" class="form-control" type="text" id="inputTelefonoMovil" placeholder="Teléfono móvil">
                                </div>
                                <div class="col-sm-6">
                                    <input asp-for="TelefonoFijo" class="form-control" type="text" id="inputTelefonoFijo" placeholder="Teléfono fijo">
                                </div>
                            </div>
                            <div class="form-group">
                                <input asp-for="Direccion" class="form-control" type="text" id="inputDireccion" placeholder="Dirección" name="direccion">
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0"><img class="border rounded-circle imagen-perfil"></div>
                                <div class="col-sm-6">
                                    <button class="btn btn-primary border rounded" type="button" style="width: 100%;margin-top: 30px;background-color: rgb(77,77,77);">Cargar imagen de perfil</button>
                                    <p class="text-center" style="margin-top: 20px;">Imagen.png</p>
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="submit" formaction="@Url.Action("AddTrabajador", "Trabajador")" value="Agregar" class="btn btn-primary"/>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>