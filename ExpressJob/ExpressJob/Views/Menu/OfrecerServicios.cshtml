@{ 
    Layout = "_LayoutMenu";
    ViewData["Title"] = "Registro";
}

<div class="container text-dark">
    <div class="card shadow-lg o-hidden border-0 my-5">
        <div class="card-body p-0">
            <div class="row">
                <div class="col-lg-5 d-none d-lg-flex">
                    <div class="flex-grow-1 bg-register-image fondo-registro-servicios"></div>
                </div>
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h4 class="text-dark mb-4" style="font-family: Lato, sans-serif;font-weight: bold;">¡Registrate para ofrecer tus servicios!</h4>
                        </div>
                        <form class="user">
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0"><input class="form-control form-control-user" type="text" id="exampleFirstName" name="telefono_movil" placeholder="Teléfono móvil"></div>
                                <div class="col-sm-6"><input class="form-control form-control-user" type="text" id="exampleFirstName" placeholder="Teléfono fijo" name="telefono_fijo"></div>
                            </div>
                            <div class="form-group"><input class="form-control form-control-user" type="email" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Dirección" name="direccion"></div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0"><img class="border rounded-circle imagen-perfil"></div>
                                <div class="col-sm-6">
                                    <button class="btn btn-primary border rounded" type="button" style="width: 100%;margin-top: 30px;background-color: rgb(77,77,77);">Cargar imagen de perfil</button>
                                    <p class="text-center" style="margin-top: 20px;">Imagen.png</p>
                                </div>
                            </div><button class="btn btn-primary text-center d-xl-flex justify-content-center align-self-center mx-auto justify-content-xl-center" type="submit" style="background-color: #FE8F00;">REGISTRARME</button>
                            <hr>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
