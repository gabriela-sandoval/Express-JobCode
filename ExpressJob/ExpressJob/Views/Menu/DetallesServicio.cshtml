
@{
    Layout = "_LayoutMenu";
    ViewData["Title"] = "Detalles del servicio";
}

<div class="container-fluid">
    <h2 class="text-dark mb-4">Albañilería</h2>
    <div class="row mb-3">
        <div class="col-lg-4">
            <div class="card mb-3">
                <div class="card-body text-center shadow">
                    <img class="border rounded-circle border-dark mb-3 mt-4 imagen-perfil-trabajador-detalles" src="~/img/perfil_trabajador.png">
                </div>
            </div>
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="text-dark font-weight-bold m-0">Datos de contacto</h6>
                </div>
                <div class="card-body">
                    <h4 class="small font-weight-bold">Teléfono celular: </h4>
                    <h4 class="small font-weight-bold">Teléfono fijo: </h4>
                    <h4 class="small font-weight-bold">Correo electrónico: </h4>
                </div>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="row">
                <div class="col">
                    <div class="card shadow mb-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col">
                                    <h3>Pancho López</h3>
                                </div>
                            </div>
                            <div class="col">
                                <div class="row">
                                    <div class="col">
                                        <h4>Xalapa</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="col"><img src="~/img/estrellas.png" style="width: 100px;"></div>
                        </div>
                    </div>
                    <div class="card shadow">
                        <div class="card-header py-3">
                            <p class="text-dark m-0 font-weight-bold text-dark">Estos son algunos de sus trabajos:</p>
                        </div>
                        <div class="card-body">
                            <form>
                                <div class="carousel slide" data-ride="carousel" id="carousel-1">
                                    <div class="carousel-inner" role="listbox">
                                        <div class="carousel-item active">
                                            <img class="w-100 d-block" src="~/img/menu_inicio_carousel_item_1.png" alt="Slide Image">
                                        </div>
                                        <div class="carousel-item">
                                            <img class="w-100 d-block" src="~/img/menu_inicio_carousel_item_2.png" alt="Slide Image">
                                        </div>
                                        <div class="carousel-item">
                                            <img class="w-100 d-block" src="~/img/menu_inicio_carousel_item_3.png" alt="Slide Image">
                                        </div>
                                    </div>
                                    <div>
                                        <a class="carousel-control-prev" href="#carousel-1" role="button" data-slide="prev">
                                            <span class="carousel-control-prev-icon"></span>
                                            <span class="sr-only">Previous</span></a><a class="carousel-control-next" href="#carousel-1" role="button" data-slide="next">
                                            <span class="carousel-control-next-icon"></span><span class="sr-only">Next</span>
                                        </a>
                                    </div>
                                    <ol class="carousel-indicators">
                                        <li data-target="#carousel-1" data-slide-to="0" class="active"></li>
                                        <li data-target="#carousel-1" data-slide-to="1"></li>
                                        <li data-target="#carousel-1" data-slide-to="2"></li>
                                    </ol>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-group">
        <div class="card">
            <div class="card-header py-3">
                <p class="text-dark m-0 font-weight-bold">Descripción del servicio</p>
            </div>
            <div class="card-body">
                <p class="card-text">Nullam id dolor id nibh ultricies vehicula ut id elit. Cras justo odio, dapibus ac facilisis in, egestas eget quam. Donec id elit non mi porta gravida at eget metus.</p>
            </div>
        </div>
    </div>
</div>
