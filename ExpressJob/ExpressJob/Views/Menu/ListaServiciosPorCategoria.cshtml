
@{
    Layout = "_LayoutMenu";
    ViewData["Title"] = "Servicios";
}

@* Esto se crea por cada servicio *@
<div class="container-fluid">
    <h3 class="text-dark mb-0" style="font-weight: bold;">Albañilería</h3>
    <div class="d-sm-flex justify-content-between align-items-center mb-4"></div>
    <div class="row">
        <div class="col">
            <div class="row">
                <div class="col-lg-6 mb-4">
                    <div class="card text-white bg-danger shadow"></div>
                    <div class="text-center border rounded-0 shadow-sm profile-box box-servicio">
                        <div class="imagen-perfil-servicio"></div>
                        <div class="d-flex">
                            <img class="rounded-circle border rounded border-dark shadow-lg d-xl-flex imagen-perfil-trabajador-servicio" src="~/img/perfil_trabajador.png">
                            <div>
                                <div class="row">
                                    <div class="col order-1">
                                        <h3 class="text-left d-inline-flex nombre-trabajador-servicio">
                                            <a class="text-dark" href="/Menu/DetallesServicio">Pancho Pérez</a>
                                        </h3>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <h3 class="text-left d-inline-flex ciudad-trabajador-servicio">Xalapa</h3>
                                    </div>
                                    <div class="col">
                                        <img class="estrellas-servicio" src="~/img/estrellas.png">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div style="height: 65%;">
                            <div class="carousel slide" data-ride="carousel" id="carousel-1">
                                <div class="carousel-inner" role="listbox">
                                    <div class="carousel-item active">
                                        <img class="img-fluid w-100 d-block" src="~/img/menu_inicio_carousel_item_1.png" alt="Slide Image">
                                    </div>
                                    <div class="carousel-item">
                                        <img class="w-100 d-block" src="~/img/menu_inicio_carousel_item_2.png" alt="Slide Image">
                                    </div>
                                    <div class="carousel-item">
                                        <img class="w-100 d-block" src="~/img/menu_inicio_carousel_item_3.png" alt="Slide Image">
                                    </div>
                                </div>
                                <div>
                                    <a class="carousel-control-prev" href="#carousel-1" role="button" data-slide="prev">
                                        <span class="carousel-control-prev-icon"></span>
                                        <span class="sr-only">Previous</span></a>
                                        <a class="carousel-control-next" href="#carousel-1" role="button" data-slide="next">
                                            <span class="carousel-control-next-icon"></span><span class="sr-only">Next</span>
                                        </a>
                                </div>
                                <ol class="carousel-indicators">
                                    <li data-target="#carousel-1" data-slide-to="0" class="active"></li>
                                    <li data-target="#carousel-1" data-slide-to="1"></li>
                                    <li data-target="#carousel-1" data-slide-to="2"></li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
